<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_gray_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        android:background="@color/principal_color">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/usernavigation"
            android:contentDescription="@string/profile"
            app:tint="@color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/profile"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="start"
            android:layout_marginStart="16dp"/>

        <ImageView
            android:id="@+id/settingsButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/gear"
            android:contentDescription="@string/settings"
            app:tint="@color/white"
            android:layout_marginStart="16dp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/info"
                    android:contentDescription="@string/a_propos_de_vous"
                    app:tint="@color/principal_color"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/a_propos_de_vous"
                    android:textSize="18sp"
                    android:textColor="@color/principal_color"
                    android:textStyle="bold"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/profileImageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:contentDescription="@string/profile"
                android:src="@drawable/userpfp"
                android:layout_marginBottom="20dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/userNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black_text"
                    android:textSize="22sp"
                    android:layout_marginEnd="8dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/mes_recettes_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:paddingStart="32dp"
                android:paddingEnd="16dp"
                android:paddingVertical="12dp"
                android:background="@drawable/secondary_color_rounded_button"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/myyyy_recipe"
                    android:contentDescription="@string/mes_recettes"
                    android:layout_marginEnd="16dp"
                    app:tint="@color/white"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/mes_recettes"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/arrow_right"
                    android:contentDescription="@string/mes_recettes"
                    app:tint="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mon_stock_ingredients_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="32dp"
                android:paddingEnd="16dp"
                android:paddingVertical="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/secondary_color_rounded_button"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/monstock_epicerie"
                    android:contentDescription="@string/mon_stock_ingredients"
                    android:layout_marginEnd="16dp"
                    app:tint="@color/white"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/mon_stock_ingredients"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/arrow_right"
                    android:contentDescription="@string/mon_stock_ingredients"
                    app:tint="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ma_liste_epicerie_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="32dp"
                android:paddingEnd="16dp"
                android:paddingVertical="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/secondary_color_rounded_button"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/grocery_cart"
                    android:contentDescription="@string/ma_liste_epicerie"
                    android:layout_marginEnd="16dp"
                    app:tint="@color/white"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/ma_liste_epicerie"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/arrow_right"
                    android:contentDescription="@string/ma_liste_epicerie"
                    app:tint="@color/white"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/mon_plan_de_semaine_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="32dp"
                android:paddingEnd="16dp"
                android:paddingVertical="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/secondary_color_rounded_button"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/weekplanner"
                    android:contentDescription="@string/mon_plan_de_semaine"
                    android:layout_marginEnd="16dp"
                    app:tint="@color/white"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/mon_plan_de_semaine"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/arrow_right"
                    android:contentDescription="@string/mon_plan_de_semaine"
                    app:tint="@color/white"/>
            </LinearLayout>

            <Button
                android:id="@+id/deconnecterButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:text="@string/deconnecter"
                android:textColor="@color/principal_color"
                android:textSize="16sp"
                android:paddingVertical="12dp"
                android:textAllCaps="false"
                app:cornerRadius="24dp"
                android:foreground="?android:attr/selectableItemBackground"/>


        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/principal_color"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/bottom_navigation_menu" />

</LinearLayout>